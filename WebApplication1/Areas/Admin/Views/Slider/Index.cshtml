

@{
    ViewData["Title"] = "Sliders";
}
@model List<Slider>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Title</th>
                                    <th>Offer</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                               
                                <tr>
                                    <td>
                                       <img src="~/assets/images/website-images/@slider.Imaga"></img>
                                    </td>
                                    <td>slider.Title</td>
                                    <td>slider.Offer</td>
                                    <td><label class="badge badge-danger">Pending</label></td>
                                </tr>
                                    
                                }
                              </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

